<p id="notice"><%= notice %></p>

<h1>Swap Offers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date start</th>
      <th>Date end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @swap_offers.each do |swap_offer| %>
      <tr>
        <td><%= swap_offer.name %></td>
        <td><%= swap_offer.date_start %></td>
        <td><%= swap_offer.date_end %></td>
        <td><%= link_to 'Show', swap_offer %></td>
        <td><%= link_to 'Edit', edit_swap_offer_path(swap_offer) %></td>
        <td><%= link_to 'Destroy', swap_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

